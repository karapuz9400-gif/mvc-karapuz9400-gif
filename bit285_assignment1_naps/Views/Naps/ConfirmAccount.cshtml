@model bit285_assignment1_naps.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New Account Created</h1>
<fieldset>
    <form method="get" asp-action="Login">
        <div>
            <label>FirstName</label>
            <span>@Model.FirstName</span>
        </div>
        <div>
            <label>Last Name</label>
            <span>@Model.LastName</span>
        </div>
        <div>
            <label>Program</label>
            <span>@Model.Program</span>
        </div>
        <div>
            <label>Username</label>
            <span>@Model.EmailAddress</span>
        </div>
        <div>
            <label>Password</label>
            <span>@Model.Password</span>
        </div>
        <div>
            <input type="hidden" name="EmailAddress" value="@Model.EmailAddress" />
            <input type="submit" value="Go to Login" />
            <input type="reset" value="Reset" />
        </div>
    </form>
</fieldset>
